# Flask应用环境变量配置示例
# 复制此文件为 .env.development 或 .env 并填写实际值

# Flask配置
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production

# 数据库配置
DATABASE_URL=sqlite:///memo.db

# GitHub OAuth配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth回调URL
OAUTH_REDIRECT_URI=http://127.0.0.1:5000/auth/github/callback

# 多语言配置
BABEL_DEFAULT_LOCALE=zh_CN
BABEL_DEFAULT_TIMEZONE=Asia/Shanghai

# CSRF配置
WTF_CSRF_SECRET_KEY=your-csrf-secret-key

# 安全配置（生产环境）
SESSION_COOKIE_SECURE=false  # 开发环境设为false，生产环境设为true
FORCE_HTTPS=false  # 开发环境设为false，生产环境设为true